<?xml version="1.0" encoding="UTF-8"?>
<local:PlaygroundViewBase 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="StellaFiesta.Client.Tools.PlaygroundView"
    xmlns:local="clr-namespace:StellaFiesta.Client.Tools;assembly=StellaFiesta.Client">
    <ContentPage.Content>
        <Grid>
            <Button
                HorizontalOptions="FillAndExpand"
                HeightRequest="48"
                Text="Show toast"
                Command="{Binding ShowToastCommand}"/>
        </Grid>
    </ContentPage.Content>
</local:PlaygroundViewBase>
